<h2>Genre</h2>

<p>Name: <%= @genre.name %></p>

<p>Artists:</p>
<ul>
<% @genre.artists.order(:name).each do |artist| %>
<li><a href="/artists/<%= artist.slug %>"><%= artist.name %></a></li>
<% end %>
</ul>

<p>Songs:</p>
<ul>
<% @genre.songs.order(:name).each do |song| %>
<li><a href="/songs/<%= song.slug %>"><%= song.name %></a></li>
<% end %>
</ul>
