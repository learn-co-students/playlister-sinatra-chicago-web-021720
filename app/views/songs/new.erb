<h2>New Song</h2>
<form method="POST" action="/songs">
    
    <label for="Name">Song Name:</label>
    <input id="Name" name="song[name]" type="text"><br>
    
    <label for="Artist Name">Artist Name:</label>
    <input id="Artist Name" name="song[artist_name]" type="text"><br>

    <label>Genres:</label><br>
<% Genre.all.each do |genre| %>
    &emsp;<input id="genre_<%= genre.id %>" type="checkbox" name="song[genre_names][]" value="<%= genre.name %>">
    <label for="genre_<%= genre.id %>"><%= genre.name %></label><br>
<% end %>

    <br>

    <input id="Create" name="Create" value="Create" type="submit">

</form>

