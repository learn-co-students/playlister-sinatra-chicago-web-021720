<h2>Edit Song</h2>
<form method="POST" action="/songs/<%= @song.slug %>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">

    <label for="Name">Song Name:</label>
    <input id="Name" name="song[name]" type="text" value="<%= @song.name %>"><br>
    
    <label for="Artist Name">Artist Name:</label>
    <input id="Artist Name" name="song[artist_name]" type="text" value="<%= @song.artist.name %>"><br>

    <label>Genres:</label><br>
<% Genre.all.each do |genre| %>
    <% if @song.genres.include? genre %>
    &emsp;<input id="genre_<%= genre.id %>" type="checkbox" name="song[genre_names][]" value="<%= genre.name %>" checked>
    <% else %>
    &emsp;<input id="genre_<%= genre.id %>" type="checkbox" name="song[genre_names][]" value="<%= genre.name %>">
    <% end %>
    <label for="genre_<%= genre.id %>"><%= genre.name %></label><br>
<% end %>

    <br>

    <input id="Save" name="Save" value="Save" type="submit">

</form>